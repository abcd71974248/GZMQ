<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.hotsun.mqxxgl.busi.view.IconFontTextview
            android:id="@+id/oftenlist_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:textSize="20sp"
            android:textColor="@color/green_light"
            android:layout_centerHorizontal="true"
            android:text="@string/jtda_icon" />

        <TextView
            android:id="@+id/oftenlist_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="家庭人口"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <com.hotsun.mqxxgl.busi.view.IconFontTextview
            android:visibility="gone"
            android:id="@+id/oftenlist_delete"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="115dp"
            android:layout_width="25.0dip"
            android:layout_height="30.0dip"
            android:textSize="25sp"
            android:textColor="@color/act_person_gray"
            android:layout_centerHorizontal="true"
            android:text="@string/icon_delete" />

        <CheckBox
            android:id="@+id/oftenlist_check"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp"
             />

    </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/cp_bg_line_c" />

</LinearLayout>